<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assign2.RegisterPage">
    <ContentPage.Content>
        
        
        <StackLayout Padding="20"
            VerticalOptions="Center">
            <Label Text="Welcome to Register Page!"
            FontSize="Large"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
            
            <Entry Text="{ Binding Path=User.Username }"
            Placeholder="Username"
            FontSize="Large"
            />
            
            <Entry Text="{ Binding Path=User.Password }"
            Placeholder="Password"
            FontSize="Large"
            IsPassword="True"
            />
            
            <Entry Text="{ Binding Path=User.Phone }"
            Placeholder="Phone"
            FontSize="Large"
            />
            
            <Entry Text="{ Binding Path=User.Email }"
            Placeholder="E-mail"
            FontSize="Large"
            IsPassword="True"
            />

            <Button x:Name="btnRegister"
            Text="Register"
            Font="large"
            BackgroundColor="LightBlue"
            Clicked="btnRegister_ClickedAsync"
            />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>